//OPERADORES DE ASIGNACIÓN



//En síntesis, una expresión es una secuencia de operaciones y operandos que especifica un cálculo. 

#include<stdio.h>



int main(){

 

 int a,b,c,d ;

 a=10;

 b=10;

 c=10;

 d=10;

 // Podemos darle el valor a varias variables al mismo tiempo int a,b,c = 10;

 a += 10; //Abreviatura de a = a + 10

 b -=5; //Abreviatura de a = a - 10

 c *=5; //Abreviatura de a = a - 10

 d /=2;

 printf("El valor de A sumado es : %i ", a);

 printf("El valor de A es restado : %i ", b);

 printf("El valor de A es multiplicado : %i ", c);

 printf("El valor de A es dividido : %i ", d);



 

}

