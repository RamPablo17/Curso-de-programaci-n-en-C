//Salida de variables

#inlcude<stdio.h>

#define PI 3.1416//Macro

int main(){

	//No es igual a=/A

	int a=1098;

	float b=-598.58;

	char c='a';

//	Alt+92  \

//  Alt+123 {

//  ALt+125 }

	printf("Pi= %f",PI);

	printf("\nDato entero %i",a);

	printf("\nDato flotante %i,"b);

	printf("\nDato flotane %f",b);//%.2f

	printf("\nDato caracter %i",c);//Codigo ASCII

	printf("\nDato caracter %c",c);

	return 0;

}

